{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/app",
    "incremental": true,
    "paths": {
      "@prisma": ["../prisma/generated"],
      "@env": ["../environment"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
