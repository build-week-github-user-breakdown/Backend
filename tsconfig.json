{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@bw/*": ["app/*"],
      "@bw/environment": ["environment"],
      "@bw/prisma": ["prisma"],
      "@bw/services": ["app/services/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
